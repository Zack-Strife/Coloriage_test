<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zackstrife.hugo.capezzone.MainActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/BtnRed"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textSize="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:longClickable="false"
        android:background="#ff0000"
        android:layout_weight="0.24" />
    <Button
        android:id="@+id/BtnBlue"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BtnRed"
        android:layout_toEndOf="@+id/BtnRed"
        android:background="#0015ff"
        android:textColor="#ffffff"
        android:layout_weight="0.2" />
    <Button
        android:id="@+id/BtnYel"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BtnBlue"
        android:layout_toEndOf="@+id/BtnBlue"
        android:background="#ffe600"
        android:layout_weight="0.2" />
    <Button
        android:id="@+id/BtnBlack"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:text="Black"
        android:textSize="10sp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/BtnYel"
        android:layout_weight="0.20" />
    <Button
        android:id="@+id/BtnRand"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Rand"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/BtnBlack"
        android:layout_weight="0.20"
        android:background="#a3a1a1" />

    <com.zackstrife.hugo.capezzone.DessinView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/DessinView"
        android:layout_gravity="bottom"
        android:layout_weight="0.0"
        android:focusable="false"
        android:longClickable="false"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/BtnClear"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="12sp"
        android:background="#b8b8b8"
        android:layout_weight="0.20"

        android:layout_toRightOf="@+id/BtnRand" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="12sp"
        android:id="@+id/textView"
        android:layout_toRightOf="@id/BtnClear"
        android:background="#ffffff" />
    <EditText
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/editText"
        android:layout_toRightOf="@+id/textView"
       />


</RelativeLayout >

